- if @message.user == current_user
  %h1= "Sent to the #{ User.find_by_id(@message.conversation.recipient_id).name }"
- else
  %h1= "Obtained from the #{ @message.user.name }"
= @message.title
%h5= @message.body
%h5= time_ago_in_words(@message.created_at)
= link_to "Download file", @message.attachment_url
