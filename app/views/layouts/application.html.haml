!!!
%html
  %head
    %title Project2
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      = render 'layouts/header'
      = render 'layouts/flash'
      - if signed_in?
        .container-fluid
          .row-fluid
            .col-sm-4.col-md-3
              .nav.nav-sidebar
                = render 'layouts/left_sidebar'
            .col-sm-8.col-md-9
              .row.placeholders
                = yield
      - else
        = yield
